	"version": "0.1.0",
	"command": "bash",
	"isShellCommand": true,
	"args": ["-c"],
	"showOutput": "always"
	
	"tasks": [
		{
			"taskName": "Compile",
			"suppressTaskName": true,
			"isBuildCommand": true,
			"args": ["make -j test/test"],
		}	
		{
			"taskName": "Test",
			"suppressTaskName": true,
			"isTestCommand": true,
			"args": ["test/test"],
		}		]
}